{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "react/jsx-filename-extension": ["error", { "extensions": [".js", ".jsx"] }],
    "react/destructuring-assignment": [0, "never", { "ignoreClassFields": false }],
    "react/prefer-stateless-function": [0, { "ignorePureComponents": false }],
    "react/forbid-prop-types": [0, { "forbid": [] }]
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "settings": {
    "import/core-modules": [
      "src",
      "components",
      "flows",
      "models",
      "resources",
      "screens",
      "utils",
      "services"
    ]
  },
  "env": {
    "browser": true
  }
}
